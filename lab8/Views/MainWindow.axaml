<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:lab8.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="using:lab8.Models"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
        x:Class="lab8.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Height="600"
        Width="800"
        Title="lab8">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <DockPanel>
	  
        <!--Меню-->
	  
	  <Menu Background="AntiqueWhite" DockPanel.Dock="Top" VerticalAlignment="Top">
      <MenuItem Header="File">
        
		<MenuItem Header="_New" Name="NewMenu"/>
        <MenuItem Header="_Save" Name="SaveMenu"/>
        <MenuItem Header="_Load" Name="LoadMenu"/>
        
		<Separator />
        
		<MenuItem Header="_Exit" Name="ExitMenu"/>
      
	  </MenuItem>
      <MenuItem Header="About" Name="AboutMenu"/>
    </Menu>
	  
	  <!--Основной функционал-->
	  
    <Grid Background="LightYellow" ColumnDefinitions="*,*,*" RowDefinitions="30, *, 30" ShowGridLines="True" >
      <TextBlock Grid.Column="0" Text="Запланировано" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
      <TextBlock Grid.Column="1" Text="В работе" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
      <TextBlock Grid.Column="2" Text="Завершено" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>

		<!--Запланировано-->
		
      <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible" Background="LightYellow" Grid.Column="0" Grid.Row="1" Items="{Binding plan}" AutoScrollToSelectedItem="False">
        <ListBox.ItemTemplate>
          <DataTemplate DataType="{x:Type model:Note}" >
            <Expander IsExpanded="{Binding IsSelected}" Header="{Binding Header}" HorizontalContentAlignment="Stretch">
              <StackPanel>
                <TextBlock Text="Заголовок:" />
                <TextBox Text="{Binding Header}"/>
                <TextBlock Text="Задача"/>
                <TextBox Text="{Binding Task}" TextWrapping="NoWrap" AcceptsReturn="True" Height="100"/>
                <Image Source="{Binding Image}" Height="150"/>
                <Button Content="Добавить картинку" HorizontalAlignment="Stretch" Command="{Binding $parent[ListBox].VisualRoot.AddClk}" CommandParameter="{Binding}"/>
                <Button Content="Удалить задачу" HorizontalAlignment="Stretch" Command="{Binding $parent[ListBox].DataContext.DeleteClk}" CommandParameter="{Binding}"/>
              </StackPanel>
            </Expander>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

	    <!--В процессе-->
		
      <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible" Background="LightYellow" Grid.Column="1" Grid.Row="1" Items="{Binding inprogress}" AutoScrollToSelectedItem="False">
        <ListBox.ItemTemplate>
          <DataTemplate DataType="{x:Type model:Note}" >
            <Expander IsExpanded="{Binding IsSelected}" Header="{Binding Header}" HorizontalContentAlignment="Stretch">
              <StackPanel>
                <TextBlock Text="Заголовок:" />
                <TextBox Text="{Binding Header}"/>
                <TextBlock Text="Задача"/>
                <TextBox Text="{Binding Task}" TextWrapping="NoWrap" AcceptsReturn="True" Height="100"/>
                <Image Source="{Binding Image}" Height="150"/>
                <Button Content="Добавить картинку" HorizontalAlignment="Stretch" Command="{Binding $parent[ListBox].VisualRoot.AddClk}" CommandParameter="{Binding}"/>
                <Button Content="Удалить задачу" HorizontalAlignment="Stretch" Command="{Binding $parent[ListBox].DataContext.DeleteClk}" CommandParameter="{Binding}"/>
              </StackPanel>
            </Expander>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

		<!--Закончено-->
		
      <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible" Background="LightYellow" Grid.Column="2" Grid.Row="1" Items="{Binding complete}" AutoScrollToSelectedItem="False">
        <ListBox.ItemTemplate>
          <DataTemplate DataType="{x:Type model:Note}" >
            <Expander IsExpanded="{Binding IsSelected}" Header="{Binding Header}" HorizontalContentAlignment="Stretch">
              <StackPanel>
                <TextBlock Text="Заголовок:" />
                <TextBox Text="{Binding Header}"/>
                <TextBlock Text="Задача"/>
                <TextBox Text="{Binding Task}" TextWrapping="NoWrap" AcceptsReturn="True" Height="100"/>
                <Image Source="{Binding Image}" Height="150"/>
                <Button Content="Добавить картинку" HorizontalAlignment="Stretch" Command="{Binding $parent[ListBox].VisualRoot.AddClk}" CommandParameter="{Binding}"/>
                <Button Content="Удалить задачу" HorizontalAlignment="Stretch" Command="{Binding $parent[ListBox].DataContext.DeleteClk}" CommandParameter="{Binding}"/>
              </StackPanel>
            </Expander>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

		<!--добавить задачу-->
		
      <Button Command="{Binding AddNotePlan}" Grid.Column="0" Grid.Row="2" Content="Добавить задачу" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="AntiqueWhite"/>
      <Button Command="{Binding AddNoteInProgress}" Grid.Column="1" Grid.Row="2" Content="Добавить задачу" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="AntiqueWhite"/>
      <Button Command="{Binding AddNoteComplete}" Grid.Column="2" Grid.Row="2" Content="Добавить задачу" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="AntiqueWhite"/>
    </Grid>
  </DockPanel>
</Window>
